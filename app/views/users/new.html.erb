<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  <p>First Name:</p>
  <%= f.text_field :first_name %>
  <p>Last Name:</p>
  <%= f.text_field :last_name %>
  <p>Email:</p>
  <%= f.text_field :email %>
  <p>Password:</p>
  <%= f.password_field :password %>
  <p>Password Confirmation:</p>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Register!" %>

<% end %>