<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
  <ul>
    <% @total = 0 %>
    <%= @order.line_items.each do |line_item| %>

      <h1><%= line_item.product.name %></h1>
      <li><%= line_item.product.description %></li>
      <li><%= image_tag(line_item.product.image, :size => "100x100") %></li>
      <% @total += line_item.total_price_cents %>
      </br>
    <% end %>
    </br>
    <li> Total number of items ordered: <%= @total_items %></li>
    </br>
    <li> Your reciept will be mailed to: <%= current_user.email %></li>
    </br>
    <li> Your Total Amount: <%= @total %></li>
  </ul>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
